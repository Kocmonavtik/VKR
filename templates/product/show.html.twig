        {% if product is not empty %}
            {% if app.user  %}
                <div class="d-flex flex-column p-2 align-items-center">
                    <h1>{{ product.name }}</h1>
                    <a type="button" class="btn btn-warning" href="{{ path('product_statistic', {'id': product.id}) }}">Статистика</a>
                </div>
            {% else %}
                <h1>{{ product.name }}</h1>
            {% endif %}
            <div class="d-flex flex-column p-2 align-items-center">
                    <div class="card mb-3" style="max-width: 840px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <div id="carousel{{ product.id }}" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators">
                                        {% for key in offers[product.id]|keys %}
                                            {% if key==0 %}
                                                <button type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide-to="{{ key }}" class="active" aria-current="true" aria-label="Slide {{ key }}"></button>
                                            {% else %}
                                                <button type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide-to="{{ key }}" aria-label="Slide {{ key }}"></button>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <div class="carousel-inner">
                                        {% for info in offers[product.id] %}
                                            {% if loop.first %}
                                                <div class="carousel-item active">
                                                    <img src="{{ asset('upload/pictures/' ~ info.image[0]) }}" class="img-fluid rounded-start" alt="...">
                                                </div>
                                            {% else %}
                                                <div class="carousel-item">
                                                   <img src="{{ asset('upload/pictures/' ~ info.image[0]) }}" class="img-fluid rounded-start" alt="...">
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h4 class="card-title">Средняя цена: {{ median }}</h4>
                                    <h4 class="card-title">Средняя оценка: {{ avgRating }}</h4>
                                    <h4 class="card-title">Производитель: {{ product.manufacturer.name }}</h4>
                                    <h5 class="card-text">О товаре</h5>
                                    {% for property in product.propertyProducts %}
                                        <p class="card-text">{{ property.property.name }}: {{ property.value }}</p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        {% for offer in offers[product.id] %}
                            {% if offer.status=='complete' %}
                                <div class="card mb-3" style="max-width: 840px;">
                                    <div class="row g-0">
                                        <div class="col-md-4">
                                            <a href="{{ offer.store.urlStore }}">
                                                <img src="{{ asset('upload/' ~ offer.store.logo) }}" class="img-fluid rounded-start" alt="...">
                                            </a>
                                        </div>
                                        <div class="col-md-8">

                                            <div class="card-body">
                                                <h4 class="card-title"><a class="text-decoration-none text-info" href="{{ offer.store.urlStore }}">{{ offer.store.nameStore}}</a></h4>
                                                <h5 class="card-title">Цена: {{ offer.price }}</h5>
                                                <h5 class="card-title">Средняя оценка: {{ offer.averageRating }}</h5>
                                                <p class="card-text">Дата обновления цены: {{ offer.dateUpdate|date("m.d.Y", false) }}</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <a type="button" class="btn btn-warning" href="{{ offer.url }}">В магазин</a>
                                                    {#<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Open modal for @mdo</button>
                                                    <a class="fas fa-reply fa-xs small" aria-expanded="false" type="button" data-toggle="modal" data-target="#reportModal" data-whatever id="{{ offer.id }}">Жалоба<</a>#}
                                                    <a class="fas fa-reply fa-xs small" type="button" data-bs-toggle="modal" data-bs-target="#reportModal" data-bs-whatever="{{ offer.id }}" aria-expanded="false">Жалоба</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
            </div>

            <section class="gradient-custom">
                <div class="container my-5 py-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-12 col-lg-10 col-xl-8">
                            <div class="card">
                                <div class="card-body p-4">
                                    <h4 class="text-center mb-4 pb-2">Комментариев: {{ countComments }} </h4>
                                    {% if app.user %}
                                    <span>Выбрать магазин</span>
                                    <div class="row align-items-center">
                                        <div class="col-5">
                                            <select class="form-select" aria-label="category" id="selectCategory">
                                                <option selected value="nothing">Не выбрано</option>
                                                {% for shop in shops %}
                                                    <option value="{{ shop.nameStore }}">{{ shop.nameStore }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-7">
                                            <input id="input-2" name="input-2" class="rating rating-loading" data-min="0" data-max="5" data-step="0.5" data-size="lg">
                                        </div>
                                    </div>
                                        <div class="row">
                                            <div class="col">
                                                <button  type="button" class="btn btn-warning d-inline-flex align-items-center rounded border-0 disabled"
                                                        data-bs-toggle="collapse" data-bs-target="#comment-collapse" aria-expanded="false">
                                                    Оставить отзыв
                                                </button>
                                                <div class="collapse" id="comment-collapse" style>
                                                    {{ form_start(form) }}
                                                    {{ form_widget(form) }}
                                                    <button class="btn btn-info d-inline-flex align-items-center rounded border-0">{{ button_label|default('Отправить') }}</button>
                                                    {{ form_end(form) }}
                                                </div>
                                            {% endif %}
                                            {% for originalComment in comments %}
                                                <div class="d-flex flex-start">
                                                    <img class="rounded-circle shadow-1-strong me-3"
                                                         src="{{ asset('upload/' ~ originalComment.customer.avatar) }}" alt="avatar" width="65"
                                                         height="65" />
                                                    <div class="flex-grow-1 flex-shrink-1">
                                                        <div>
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <p class="mb-1">
                                                                    {{ originalComment.customer.name }} <span class="small">- {{ originalComment.date|format_datetime('short', 'short', locale='ru') }}</span>
                                                                </p>
                                                                {% if app.user %}
                                                                    {#<button class="btn btn-toolbar d-inline-flex align-items-center rounded border-0 text-white"
                                                                            data-bs-toggle="collapse" data-bs-target="#catalog-collapse" aria-expanded="false">
                                                                        Каталог
                                                                    </button>#}
                                                                    <a class="fas fa-reply fa-xs small"
                                                                       data-bs-toggle="collapse"
                                                                       data-bs-target="#response-collapse{{ originalComment.id }}"
                                                                       aria-expanded="false" role="button">Ответить<</a>
                                                                    <div class="collapse" id="response-collapse{{ originalComment.id }}" style>
                                                                        {{ form_start(responseForms[originalComment.id]) }}
                                                                            {{ form_widget(responseForms[originalComment.id]) }}
                                                                        {{ form_end(responseForms[originalComment.id]) }}
                                                                    </div>
                                                                {% endif %}
                                                            </div>
                                                            <p class="small mb-0">{{ originalComment.text }}
                                                            </p>
                                                        </div>
                                                        {% for comment in originalComment.comments %}
                                                            <div class="d-flex flex-start mt-4">
                                                                <a class="me-3" href="#">
                                                                    <img class="rounded-circle shadow-1-strong"
                                                                         src="{{ asset('upload/' ~ originalComment.customer.avatar) }}" alt="avatar"
                                                                         width="65" height="65" />
                                                                </a>
                                                                <div class="flex-grow-1 flex-shrink-1">
                                                                    <div>
                                                                        <div class="d-flex justify-content-between align-items-center">
                                                                            <p class="mb-1">
                                                                                {{ comment.customer.name }} <span class="small">- {{ comment.date|format_datetime('short', 'short', locale='ru') }}</span>
                                                                            </p>
                                                                        </div>
                                                                        <p class="small mb-0">
                                                                            {{ comment.text }}
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            </div>
            </div>
        {% else %}
            <div >
                <p class="text-center text-warning">Упс! Товар не найден!</p>
            </div>
        {% endif %}
    </div>

