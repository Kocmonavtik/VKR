{% extends 'base.html.twig' %}

{% block title %}Statistic product{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row align-items-start">
            <div class="col-6">
                <h3><a class="text-decoration-none text-black" href="{{ path('app_product_show', {'id': product.id}) }}" >{{ product.name }}</a></h3>
                <div class="d-flex flex-column p-2">
                    <div class="card mb-3" style="max-width: 840px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <div id="carousel{{ product.id }}" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators">
                                        {% for key in offers[product.id]|keys %}
                                            {% if key==0 %}
                                                <button type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide-to="{{ key }}" class="active" aria-current="true" aria-label="Slide {{ key }}"></button>
                                            {% else %}
                                                <button type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide-to="{{ key }}" aria-label="Slide {{ key }}"></button>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <div class="carousel-inner">
                                        {% for info in offers[product.id] %}
                                            {% if loop.first %}
                                                <div class="carousel-item active">
                                                    <img src="{{ asset('upload/pictures/' ~ info.image[0]) }}" class="img-fluid rounded-start" alt="...">
                                                </div>
                                            {% else %}
                                                <div class="carousel-item">
                                                    <img src="{{ asset('upload/pictures/' ~ info.image[0]) }}" class="img-fluid rounded-start" alt="...">
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ product.id }}" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <input type=hidden id="hiddenId" value="{{ product.id }}">
                                <div class="card-body">
                                    <p class="card-title">Производитель: {{ product.manufacturer.name }}</p>
                                    <p class="card-text">О товаре:</p>
                                    {% for property in properties|keys %}
                                        <p class="card-text">{{ property }}: {{ properties[property] }}</p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <p>Магазин</p>
                <div id="storeList">
                    {% for shop in shops %}
                    <div class="form-check">
                        <input class="form-check-input storeCheck" type="checkbox" value="{{ shop.nameStore }}" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">{{ shop.nameStore }}</label>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div class="col">
                <p>Статистика по:
                    <select class="form-select" aria-label="statisticData" id="selectStatisticData">
                        <option selected value="nothing">Не выбрано</option>
                        <option value="rating">Рейтингу</option>
                        <option value="visit">Посещаемости</option>
                    </select>
                </p>
                <button type="button" class="btn btn-success btn-lg disabled" id="createChart">Создать</button>
                <p>За период:</p>
                {{ form_start(dateForm) }}
                {{ form_widget(dateForm.dateFirst) }}
                {{ form_widget(dateForm.dateSecond) }}
                {{ form_end(dateForm) }}
            </div>
        </div>
        <canvas id="Chart" width="600" height="400"></canvas>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('StatisticProduct') }}
{% endblock %}
